<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href= "/css/products.css">
    <title>Products</title>
</head>

<body>
        {{> navbar}}
        <h1>Products List</h1>

        <!-- Make a table with data -->
        <table style="width:100%">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Seller</th>

                {{#if name}}
                <th>Action</th>
                {{/if}}
            </tr>

            
            {{#each products}}
            <a href="http://localhost:3000/product/{{this.id}}">
            <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.name}}</td>

                    {{#if ../name}}
                    <td>
                        <button type="button">
                            <a href="#">Edit</a>
                        </button>

                        <button type="button">
                            <a href="#">Delete</a>
                        </button>
                    </td>
                    {{/if}}
            </tr>
            </a>
        {{/each}}

        </table>

        {{#if name}}
        <button type="button">
            <a href="http://localhost:3000/add-product">Add product</a>
        </button>
        {{/if}}
</body>
</html>